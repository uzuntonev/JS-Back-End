{{> message}}
{{#if user}}

<section class="actions">
    <form action="/refill" method="POST">
        <h2>Salary time? Refill your account amount.</h2>
        <input type="text" name="refill" id="refill-amount">
        <button type="submit">Refill</button>
    </form>
    <div>
        <h2>New expense comming up?</h2>
        <a href="/create">Add it now</a>
    </div>
</section>

<hr class="separator">

<table class="expenses">
    <thead>
        <tr>
            <th>Date</th>
            <th>Merchant</th>
            <th>Amount</th>
            <th>Category</th>
            <th>Description</th>
        </tr>

    </thead>
    <tbody>
        {{#each expenses}}
                <tr>
            <td>
                <img src="/images/date.png" />
                <p>{{date}}</p>
            </td>
            <td>
                <p>{{merchant}}</p>
                {{#if report}}
                <div class="report">
                    <a href="/report/{{_id}}">Report</a>
                </div>
                {{/if}}
            </td>
            <td>
                <img src="images/amount.png" alt="">
                <p>лв {{total}}</p>
            </td>
            <td>
                <img src="images/category.png" alt="">
                <p>{{category}}</p>
            </td>
            <td>
                <img src="images/hastag.png" alt="">
                <p>{{description}}</p>
            </td>
        </tr>
